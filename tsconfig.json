{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@database": ["./src/database"],
      "@types": ["./src/types"]
    },
  },
  "exclude": ["build", "node_modules"]
}
